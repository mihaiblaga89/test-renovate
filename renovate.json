{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":semanticCommitTypeAll(chore)",
        ":pinVersions"
    ],
    "baseBranches": [
        "main",
        "/^release\\/.*/"
    ],
    "packageRules": [
        {
            "packagePatterns": [
                "*"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "rnv"
            ],
            "packagePatterns": [
                "^@rnv\/.*"
            ],
            "groupName": "rnv stable packages",
            "enabled": true,
            "matchBaseBranches": [
                "/^release\\/.*/"
            ]
        },
        {
            "matchPackageNames": [
                "rnv"
            ],
            "packagePatterns": [
                "^@rnv\/.*"
            ],
            "ignoreUnstable": false,
            "respectLatest": false,
            "followTag": "canary",
            "groupName": "rnv canary packages",
            "enabled": true,
            "matchBaseBranches": [
                "main"
            ]
        }
    ]
}